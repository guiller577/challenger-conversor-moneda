package monedas;

import javax.swing.JOptionPane;

public class monedas {
	public void convertirPesoADolar(double valor) {
		double mDolar = valor / 225.00;
		mDolar = (double) Math.round(mDolar *100d)/100;
		JOptionPane.showMessageDialog(null,"Tiene $ " +mDolar+ "Dolares");
	}
	public void convertirPesoAEuro(double valor) {
		double mEuro = valor / 244.00;
		mEuro = (double) Math.round(mEuro *100d)/100;
		JOptionPane.showMessageDialog(null,"Tiene $ " +mEuro+ "Euros");
	}
	public void convertirPesoALibras(double valor) {
		double mLibras = valor / 269.03;
		mLibras = (double) Math.round(mLibras *100d)/100;
		JOptionPane.showMessageDialog(null,"Tiene $ " +mLibras+ "Libras Esterlinas");
	}
	public void convertirPesoAYen(double valor) {
		double mYen = valor / 1.61;
		mYen = (double) Math.round(mYen *100d)/100;
		JOptionPane.showMessageDialog(null,"Tiene $ " +mYen+ "Yenes");
	}
	public void convertirPesoAWon(double valor) {
		double mWon = valor / 0.16;
		mWon = (double) Math.round(mWon *100d)/100;
		JOptionPane.showMessageDialog(null,"Tiene $ " +mWon+ "Wons");
	}
}
